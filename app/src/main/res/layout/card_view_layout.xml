                    <ImageView
                        app:layout_widthPercent="20%"
                        app:layout_heightPercent="40%"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/euro" />

                    <TextView
                        android:id="@+id/salTxt"
                        app:layout_widthPercent="100%"
                        app:layout_heightPercent="40%"
