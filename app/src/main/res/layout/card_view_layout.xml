                        android:id="@+id/profileImageView"
                        app:riv_corner_radius="10dip"
                        app:riv_border_width="2dip"
                        app:riv_border_color="#333333"
                         />-->

                   <ImageView
                        android:id="@+id/profileImageView"
                        app:layout_widthPercent="26%"
                        app:layout_heightPercent="26%"
                        android:background="@drawable/image_border"
                        android:gravity="center_horizontal"
                        app:layout_marginTopPercent="12%"
                        android:layout_centerHorizontal="true" />


                    <TextView
                        android:id="@+id/descTxt"
                        app:layout_widthPercent="32%"
                        app:layout_heightPercent="6%"
                        app:layout_marginTopPercent="72%"
                        android:text="jobkind"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:layout_centerHorizontal="true"
                        android:textSize="12dp"
                        android:textStyle="bold" />




                </android.support.percent.PercentRelativeLayout>
                <android.support.percent.PercentRelativeLayout
                    app:layout_widthPercent="100%"
                    app:layout_heightPercent="30%"
                    app:layout_marginTopPercent="68%">



                    <android.support.percent.PercentRelativeLayout
                        app:layout_widthPercent="100%"
                        android:id="@+id/plc"
                        android:layout_centerHorizontal="true"
                        app:layout_heightPercent="100%">
                        <ImageView
                            app:layout_widthPercent="15%"
                            app:layout_heightPercent="40%"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/place" />

                        <TextView
                            android:id="@+id/placeTxt"
                            app:layout_widthPercent="100%"
                            app:layout_heightPercent="40%"
                            app:layout_marginTopPercent="28%"
                            android:text="place"
                            android:gravity="center"
                            android:textSize="11dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorWhite"
                            android:textStyle="normal" />

                    </android.support.percent.PercentRelativeLayout>
                    <!--<android.support.percent.PercentRelativeLayout
                        app:layout_widthPercent="33%"
