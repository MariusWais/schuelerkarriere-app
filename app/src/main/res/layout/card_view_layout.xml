                        <ImageView
                            app:layout_widthPercent="20%"
                            android:layout_centerHorizontal="true"
                            app:layout_heightPercent="40%"
                            android:src="@drawable/clock_icon" />
                        <TextView
                            android:id="@+id/durTxt"
                            app:layout_widthPercent="100%"
