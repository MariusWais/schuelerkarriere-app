<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorPrimaryDark">


    <EditText
        android:id="@+id/cp_log_mail"
        app:layout_widthPercent="75%"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="17dp"
        android:textCursorDrawable="@null"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_marginTopPercent="34%"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/imageViewCp"
        app:layout_widthPercent="50%"
        app:layout_marginTopPercent="12%"
        android:adjustViewBounds = "true"
        android:layout_height="wrap_content"
        android:src="@drawable/sklogo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/cp_log_pw"
        app:layout_widthPercent="75%"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="16dp"
        android:backgroundTint="@color/colorWhite"
        android:hint="Passwort"
        android:textCursorDrawable="@null"
        android:textColor="@color/colorWhite"
        android:inputType="textPassword"
        app:layout_marginTopPercent="46%"
        android:layout_alignLeft="@+id/user_log_mail"
        android:layout_alignStart="@+id/user_log_mail" />

    <EditText
        android:id="@+id/cp_log_new"
        app:layout_widthPercent="75%"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="16dp"
        android:backgroundTint="@color/colorWhite"
        android:hint="Neues Passwort"
        android:textCursorDrawable="@null"
        android:textColor="@color/colorWhite"
        android:inputType="textPassword"
        app:layout_marginTopPercent="60%"
        android:layout_alignLeft="@+id/user_log_mail"
        android:layout_alignStart="@+id/user_log_mail" />

    <Button
        android:id="@+id/buttonCp"
        app:layout_widthPercent="75%"
        android:layout_height="35dp"
        android:onClick="UserLog"
        android:text="Melde dich an!"
        android:textAllCaps="false"
        android:layout_marginBottom="28dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/shape_filled_big"
        app:layout_marginTopPercent="75%"
        android:layout_alignLeft="@+id/user_log_pw"
        android:layout_alignStart="@+id/user_log_pw" />

    <ProgressBar
        android:id="@+id/progressBarCp"
        style="?android:attr/progressBarStyle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorWhite"
        app:layout_marginTopPercent="80%"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewCp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:clickable="true"
        android:onClick="getToUserReg"
        android:text="Du hast noch keinen Account?"
        app:layout_marginTopPercent="72%"
        android:layout_centerHorizontal="true" />

</android.support.percent.PercentRelativeLayout>