<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorBlue">

    <EditText
        android:id="@+id/user_reg_mail"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_widthPercent="75%"
        android:hint="Email"
        android:backgroundTint="@color/colorWhite"
        android:focusable="true"
        android:textCursorDrawable="@null"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        android:inputType="textPersonName"
        android:layout_alignLeft="@+id/user_reg_username"
        android:layout_alignStart="@+id/user_reg_username"
        app:layout_marginTopPercent="46%" />

    <EditText
        android:id="@+id/user_reg_username"
        app:layout_widthPercent="75%"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textCursorDrawable="@null"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        android:backgroundTint="@color/colorWhite"
        android:hint="Benutzername"
        android:focusable="true"
        android:inputType="textPersonName"
        app:layout_marginTopPercent="34%"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/user_reg_pw"
        app:layout_widthPercent="75%"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="14dp"
        android:backgroundTint="@color/colorWhite"
        android:hint="Passwort"
        android:textCursorDrawable="@null"
        android:textColor="@color/colorWhite"
        android:focusable="true"
        android:inputType="textPassword"
        android:layout_alignLeft="@+id/user_reg_mail"
        android:layout_alignStart="@+id/user_reg_mail"
        app:layout_marginTopPercent="58%" />

    <Button
        app:layout_widthPercent="75%"
        android:layout_height="40dp"
        android:id="@+id/button"
        android:text="Registriere dich!"
        android:textAllCaps="false"
        android:textColor="#000"
        android:background="@drawable/shape_filled_big"
        android:layout_alignLeft="@+id/user_reg_pw"
        android:layout_alignStart="@+id/user_reg_pw"
        app:layout_marginTopPercent="75%" />


    <ImageView
        android:id="@+id/imageView"
        app:layout_widthPercent="50%"
        android:adjustViewBounds = "true"
        android:layout_height="wrap_content"
        android:src="@drawable/sklogo"
        app:layout_marginTopPercent="12%"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="20dp"
        android:scrollbarStyle="outsideInset"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorWhite"
        app:layout_marginTopPercent="87%" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Du bist bereits angemeldet?"
        android:textSize="11dp"
        android:onClick="getToUserLogin"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="85%"/>


</android.support.percent.PercentRelativeLayout>